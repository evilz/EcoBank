<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:EcoBank.App.ViewModels.Cards"
             xmlns:domain="using:EcoBank.Core.Domain.Cards"
             x:Class="EcoBank.App.Views.Cards.CardsView"
             x:DataType="vm:CardsViewModel">

  <DockPanel>
    <Border DockPanel.Dock="Top" Padding="16,12">
      <TextBlock Text="Mes cartes" FontSize="22" FontWeight="SemiBold"/>
    </Border>

    <ProgressBar DockPanel.Dock="Top" IsIndeterminate="True" Height="3" IsVisible="{Binding IsBusy}"/>

    <ScrollViewer>
      <StackPanel Margin="16" Spacing="12">
        <ItemsControl ItemsSource="{Binding Cards}">
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="domain:Card">
              <Border CornerRadius="{StaticResource RadiusXl}"
                      Background="#1A56DB"
                      Padding="20"
                      Margin="0,0,0,4">
                <Grid RowDefinitions="Auto,*,Auto">
                  <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="{Binding Type}" Foreground="#C7D7FF" FontSize="12"/>
                    <TextBlock Text="Â·" Foreground="#C7D7FF"/>
                    <TextBlock Text="{Binding Status}" Foreground="#C7D7FF" FontSize="12"/>
                  </StackPanel>
                  <TextBlock Grid.Row="1"
                             Text="{Binding MaskedPan}"
                             Foreground="White"
                             FontSize="18"
                             FontWeight="Bold"
                             Margin="0,16"
                             LetterSpacing="3"/>
                  <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="16">
                    <StackPanel Spacing="2">
                      <TextBlock Text="Titulaire" Foreground="#C7D7FF" FontSize="10"/>
                      <TextBlock Text="{Binding HolderName}" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                    </StackPanel>
                  </StackPanel>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </StackPanel>
    </ScrollViewer>
  </DockPanel>
</UserControl>
